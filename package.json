{
  "name": "lightning",
  "version": "0.7.1",
  "description": "A port forwarding utility",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64",
    "ship": "electron-builder --win --x64 -p always"
  },
  "repository": "https://github.com/SuchACharles/Lightning",
  "keywords": [
    "Lightning",
    "port",
    "forwarding",
    "utility",
    "ngrok"
  ],
  "author": "SuchACharles",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^4.3.5",
    "ngrok": "^3.4.0",
    "tailwindcss": "^2.0.3",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "com.suchacharles.lightning",
    "artifactName": "${productName}.${ext}",
    "win": {
      "target": "nsis",
      "icon": "public/img/icon.ico"
    },
    "compression": "maximum",
    "extraFiles": [
      "**/public/img/icon.ico"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "SuchACharles",
        "repo": "Lightning"
      }
    ]
  }
}
